<%= form_tag transactions_path, method: "post" do %>
  <div id="dropin"></div>
  <%= hidden_field_tag :request_id, params[:request_id] %>
  <%= hidden_field_tag :amount_paid, params[:amount_paid] %>
  <input type="submit" class="btn btn-primary" value="Pay <%=params[:amount_paid]%>">
<% end %>

<script src="https://js.braintreegateway.com/js/braintree-2.27.0.min.js"></script>
<script type="text/javascript">
  $(document).on('turbolinks:load', setupBT);
  function setupBT() {
    braintree.setup("<%=@client_token%>", 'dropin', {
      container: 'dropin'
    });
  }
</script>
