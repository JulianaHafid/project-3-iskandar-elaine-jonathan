    <%end%>
    <tr>
                <td colspan="3"></td>
                <td>
                    <h4><strong>Total Amount Received</strong></h4></td>
                <td>
                    <h4><strong>$<%='%.2f' % @total_received%></strong></h4></td>
  </tr>
  </tbody>
</table>
