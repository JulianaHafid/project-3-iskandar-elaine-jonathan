<h1><%=@request.event.name%></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @request.description %>
</p>

<p>
  <strong>Event Location:</strong>
  <%= @request.event.location %>
</p>

<p>
  <strong>Event Time:</strong>
  <%= @request.event.time %>
</p>

<p>
  <strong>Requestor:</strong>
  <%= @request.requestor.name %>
</p>

<p>
  <strong>Standin:</strong>
  <%if @request.standin_id != nil %>
  <%=@request.standin.name%>
  <%else%>
  <%=@request.standin_id%>
  <%end%>
</p>


<p>
  <strong>Cost:</strong>
  <%= @request.cost %>
</p>

<p>
<strong>Request Item Image:</strong>
<%= image_tag (@request.image_url) %>
</p>

<p>
<strong>Delivery Arrangement:</strong>
<%= @request.delivery_arrangement %>
</p>

<p>
<strong>Request Status:</strong>
<%= @request.status %>
</p>

<%if current_user%>
<%= link_to 'Edit', edit_request_path(@request) %> |
<%= link_to 'Back', requests_path %>
<%if @request.status != "cancelled"%>
|<%=link_to "Cancel", request_path(@request, "request[status]"=>"cancelled"), method: :patch%>
<%end%>
<%end%>
