<h1>Featured Events</h1>

<% @events.each do |item| %>
<div class="d-inline-block">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading text-center"><%=item.name%></div>
        <div class="panel-body text-center">
    <%= image_tag item.image_url.thumbnail %>
    <p>Location: <%=item.location%></p>
    <p>Date: <%=item.date%></p>
    <p>Time: <%=item.time%></p>
    <%= link_to "Add New Request", new_request_path({:event_id=>item.id}), class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>

<%end%>
