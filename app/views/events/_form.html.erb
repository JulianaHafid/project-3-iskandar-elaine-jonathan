<div class="card" style="padding: 20px;">
  <div class="card-block">
    <div class="form-header orange">
      <h3>New Event</h3>
    </div>
    <%= form_for(event) do |f| %>
    <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>

    <div class="field">
      <%= f.label :date %>
      <%= f.date_field :date %>
    </div>

    <div class="field">
      <%= f.label :time %>
      <%= f.time_field :time %>
    </div>

    <div class="field">
      <%= f.label :image_url, "Event Image" %>
      <!-- changed to file_field -->
      <%= f.file_field :image_url %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>

  </div>
</div>
