<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= ENV['PUBLISHABLE_KEY'] %>"
          data-name="StandIn Service Fee"
          data-description="Adidas NMD Launch for Kevin Lim"
          data-image="https://cdn1.iconfinder.com/data/icons/people-set-2/148/Mens-512.png"
          data-amount="500"
          data-locale="auto"
          data-currency="sgd">
  </script>
<% end %>
