<div class="card" style="padding: 20px;">
  <div class="card-block">
    <div class=" text-center">
      <h3><i class=" fa fa-pencil"></i> Edit User</h3>
    </div>
    <hr class="mt-2 mb-2">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, style:"font-size: 20px" %><br />
    <%= f.text_field :name, autofocus: true, style:"font-size: 20px; height:100%" %>
  </div>

  <div class="field">
    <%= f.label :contact, style:"font-size: 20px" %><br />
    <%= f.text_field :contact, autofocus: true, style:"font-size: 20px; height:100%" %>
  </div>

  <div class="field">
    <%= f.label :email, style:"font-size: 20px" %><br />
    <%= f.email_field :email, autofocus: true, style:"font-size: 20px; height:100%" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, style:"font-size: 20px" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", style:"font-size: 20px; height:100%" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, style:"font-size: 20px" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", style:"font-size: 20px; height:100%" %>
  </div>

  <div class="field">
    <%= f.label :current_password, style:"font-size: 20px" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", style:"font-size: 20px; height:100%" %>
  </div>

  <br><br>
  <div class="actions text-center">
    <%= f.submit "Update", class:"btn success-color" %>
  </div>
<% end %>

</div>
</div>

<h3>Cancel my account</h3>

<p>We're sad to see you go. Please don't! <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn grey" %></p>

<%= link_to "Go Back", :back, class:"btn primary-color" %>
