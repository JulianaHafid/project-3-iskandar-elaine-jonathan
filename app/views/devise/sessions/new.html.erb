<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, style:"font-size: 20px" %><br />
    <%= f.email_field :email, autofocus: true, style:"font-size: 20px; height:100%" %>
  </div>

  <div class="field">
    <%= f.label :password, style:"font-size: 20px" %><br />
    <%= f.password_field :password, autocomplete: "off", style:"font-size: 20px; height:100%" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style:"font-size: 14px" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"btn success-color" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
