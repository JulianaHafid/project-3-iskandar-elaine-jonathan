<!DOCTYPE html>
<html>
  <head>
    <title>Standin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  </head>

  <body>

    <%= render "partials/navbar" %>

    <div class="container">

      <% if notice %>
      <p class="alert success-color-dark white-text z-depth-2"><%= notice %></p>
      <% end %>

      <% if alert %>
      <p class="alert danger-color-dark white-text z-depth-2"><%= alert %></p>
      <% end %>

      <%= yield %>

    </div>
    
    <%= render "partials/footer" %>

  </body>
</html>
